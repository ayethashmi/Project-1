<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/purClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:src="@drawable/pur_close"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"/>


        <ImageView
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:src="@drawable/pru_txt"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_marginEnd="5dp"
                android:background="@drawable/pru_cornor_bottomright"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pru_ads"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginStart="5dp"
                android:background="@drawable/pru_cornor_bottomleft"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pru_timespeed"/>

            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_marginEnd="5dp"
                android:background="@drawable/pru_cornor_topright"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pru_delete"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_marginStart="5dp"
                android:background="@drawable/pru_cornor_topleft"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pru_fast"/>


            </RelativeLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/pru_yearly"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/pru_yearly"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/pru_months"
            android:layout_marginStart="50dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/pru_months"
            android:layout_marginEnd="50dp"/>

        <ImageView
            android:id="@+id/pru_three"
            android:layout_marginStart="80dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/pru_three"
            android:layout_marginEnd="80dp"/>


    </LinearLayout>



</ScrollView>