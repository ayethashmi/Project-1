<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.4gLite" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/darkModeColor</item>
        <item name="android:windowBackground">@color/darkModeColor</item>
        <item name="android:colorBackground">@color/darkModeColor</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.Ads" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@drawable/ads_icon</item>
        <item name="android:layout_marginLeft">@dimen/_1sdp</item>
        <item name="android:layout_marginTop">@dimen/_1sdp</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:paddingRight">@dimen/_5sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/_15sdp</item>
        <item name="android:minHeight">@dimen/_15sdp</item>
        <item name="android:text">AD</item>
        <item name="android:gravity">center</item>
    </style>
</resources>